<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="155dp"
            android:layout_height="117dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="400dp"
            android:layout_height="550dp"
            android:background="@color/peru"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.450"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintVertical_bias="0.490" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_home"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginBottom="36dp"
            android:background="@color/peru"
            android:text="HOME"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/logo"
            app:layout_constraintHorizontal_bias="0.617"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/logotipo"
            android:layout_width="360dp"
            android:layout_height="220dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/logotipo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />


        <TextView
            android:id="@+id/TituloAgendamento"
            android:layout_width="349dp"
            android:layout_height="61dp"
            android:layout_marginTop="4dp"
            android:text="Entre em contato para agendar"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logotipo" />

        <TextView
            android:id="@+id/TituloTelefone"
            android:layout_width="135dp"
            android:layout_height="29dp"
            android:layout_marginTop="4dp"
            android:text="TELEFONE:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TituloAgendamento" />

        <TextView
            android:id="@+id/NumeroTelefone"
            android:layout_width="157dp"
            android:layout_height="28dp"
            android:layout_marginTop="32dp"
            android:text="(13) 4351-0198"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TituloAgendamento" />

        <TextView
            android:id="@+id/TituloEmail"
            android:layout_width="135dp"
            android:layout_height="29dp"
            android:layout_marginTop="72dp"
            android:text="EMAIL:"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TituloAgendamento" />

        <TextView
            android:id="@+id/ContatoEmail"
            android:layout_width="272dp"
            android:layout_height="67dp"
            android:layout_marginTop="100dp"
            android:text="contato@hotelmaresias.com.br
reservas@hotelmaresias.com.br"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TituloAgendamento" />

        <TextView
            android:id="@+id/Funcionamento"
            android:layout_width="286dp"
            android:layout_height="46dp"
            android:layout_marginTop="192dp"
            android:text="Horário de Funcionamento: Segunda/Sábado 8:00 às 18:00"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TituloAgendamento"
            app:layout_constraintVertical_bias="0.1" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>