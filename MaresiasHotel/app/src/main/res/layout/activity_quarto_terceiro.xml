<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QuartoTerceiro">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="155dp"
            android:layout_height="117dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="contato@hotelmaresias.com.br"
            android:textColor="@color/black"
            android:textSize="9dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textnumero"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textnumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="(13) 4351-0198"
            android:textColor="@color/black"
            android:textSize="9dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/bt_home"
            app:layout_constraintEnd_toStartOf="@+id/logo"
            app:layout_constraintHorizontal_bias="0.125"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_home"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginBottom="32dp"
            android:background="@color/peru"
            android:text="HOME"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/logo"
            app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="400dp"
            android:layout_height="550dp"
            android:background="@color/peru"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.450"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo"
            app:layout_constraintVertical_bias="0.490" />

        <ImageView
            android:id="@+id/imagemdestaque1"
            android:layout_width="358dp"
            android:layout_height="195dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/quarto3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_agendarReserva3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@color/white"
            android:text="RESERVAR"
            android:textColor="@color/peru"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descricaoquarto"
            app:layout_constraintVertical_bias="0.666" />

        <TextView
            android:id="@+id/valorquarto"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:text="  R$350,00 DIÁRIA"
            android:textColor="@color/peru"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/bt_agendarReserva3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/descricaoquarto"
            android:layout_width="358dp"
            android:layout_height="110dp"
            android:layout_marginTop="8dp"
            android:text="Este quarto possui o melhor conforto e as melhores vistas da cidade do Guarujá. Esse pacote inclui tv a cabo, café da manhã, WI-FI, pacote exclusivo para turista e guarda sol na beira da praia."
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloquarto" />

        <TextView
            android:id="@+id/tituloquarto"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:text="Quarto executivo"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imagemdestaque1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>